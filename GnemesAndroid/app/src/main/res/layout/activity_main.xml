<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:layout_anchorGravity="right"
    tools:context=".ui.MainActivity">


 <androidx.fragment.app.FragmentContainerView
     android:id="@+id/nav_host_fragment"
     android:name="androidx.navigation.fragment.NavHostFragment"
     android:layout_width="match_parent"
     android:layout_height="0dp"
     app:layout_constraintBottom_toTopOf="@+id/bottomAppBar"
     app:layout_constraintVertical_bias="0.55" />


 <com.google.android.material.bottomnavigation.BottomNavigationView
     android:id="@+id/bottomAppBar"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_gravity="bottom"
     android:backgroundTint="@color/shrine_pink_100"
     android:background="@color/shrine_pink_100"
     app:itemIconTint="@color/tab_icon_tint_color"
     app:itemTextColor="@color/tab_icon_tint_color"
     app:hideOnScroll="true"
     app:labelVisibilityMode="labeled"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:menu="@menu/menu_bottom_app_bar" />


 </androidx.constraintlayout.widget.ConstraintLayout>